generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  bio       String?
  username  String?  @unique
  avatarUrl String?
  createdAt DateTime @default(now())

  posts Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  authorId  Int
  createdAt DateTime @default(now())

  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
}
